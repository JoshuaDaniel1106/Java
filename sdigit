package day4;

import java.util.Scanner;

public class sdigit {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
        int a = scan.nextInt(); 
        int s = 0; 
        
        while (a > 9) {
            s = 0;
            
            while (a > 0) {
                int temp = a % 10; 
                s = s + temp; 
                a = a / 10; 
            }
        
            a = s; 
        }
	
        System.out.println(a); 
    }
}


